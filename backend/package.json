{
    "name": "urban-mobility-backend",
    "version": "1.0.0",
    "description": "Backend API for NYC Taxi Trip Duration Dashboard",
    "main": "server.js",
    "scripts": {
        "start": "npm run add-indexes && node server.js",
        "dev": "nodemon server.js",
        "remove-processed": "rm -rf src/db/trips.db && rm -rf src/data/invalid_rows.log",
        "process-data": "npm run remove-processed && node src/services/loader.js",
        "add-indexes": "node src/services/index-creation.js",
        "fetch-large-files": "bash fetch-large-files.sh"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "csv-parser": "^3.2.0",
        "express": "^4.18.2",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "nodemon": "^3.0.1"
    },
    "keywords": [
        "taxi",
        "nyc",
        "mobility",
        "dashboard"
    ],
    "author": "",
    "license": "MIT"
}